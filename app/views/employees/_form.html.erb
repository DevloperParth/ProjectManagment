<% if !employee.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @employee.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>

<div class = "well">
   <%= form_with model: @employee do |f| %>

    <%= f.hidden_field :job_id, value: @job_detail.id %>
    <%= f.hidden_field :job_id, value: @job_detail.id %>

      <div>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>  

      <div>
        <%= f.label :email %><br>
        <%= f.email_field :email, required: true, placeholder: 'Enter your email' %>
      </div>
      <%= f.hidden_field :job_detail_id, value:@job_id %>
      <div>
        <%= f.label :Phone_number %><br>
        <%= f.telephone_field :contact_num %>
      </div>  
      
      <div>
        <%= f.label :address %><br>
        <%= f.text_field :address %>
      </div>  

      <div>
        <%= f.label :city %><br>
        <%= f.text_field :city %>
      </div>  

      <div>
        <%= f.label :skills %><br>
        <%= f.text_area :skills %>
      </div>  

      <div>
        <%= f.label :Experience %><br>
        <%= f.text_field :experience%>
      </div>  

      <div>
        <%= f.label :Resume %><br>
        <%= f.file_field :attachment %>
      </div>  

      <div><br>
        <%= f.submit "Send OTP", class: "btn btn-primary" %>
      </div>
   <% end %>
</div>






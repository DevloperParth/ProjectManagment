<%= form_with model: @employer do |form| %>
    <div>
      <%= form.label :Company_Name %><br>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :Company_Email %><br>
      <%= form.text_field :email %>
    </div>

    <div>
      <%= form.label :Company_Address %><br>
      <%= form.text_area :address %>
    </div>

    <div>
      <%= form.label :City %><br>
      <%= form.text_field :city %>
    </div>

    <div>
      <%= form.label :State %><br>
      <%= form.text_field :state %>
    </div>

    <div>
      <%= form.label :Country %><br>
      <%= form.text_field :country %>
    </div>
  
    <div>
      <%= form.label :Company_Contact %><br>
      <%= form.number_field :contact %>
    </div> 

    <div><br>
      <%= form.submit %>
    </div>
  <% end %>



  